server{
    listen 80;
    server_name localhost;

    location /api {
        proxy_pass http://zhifou-server:8080;
    }

    location / {
        root /usr/share/nginx/html;
        index index.html index.php index.htm;
        try_files $uri $uri/ /index.html =404;
    }


    error_page 500 502 503 504 /50x.html;

    location = /50x.html {
        root /usr/share/nginx/html;
    }
}
